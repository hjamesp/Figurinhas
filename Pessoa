public class Pessoa {
	
	String nome;
	int numFigurinhas;
	
	void receber(int numFigurinhas) {
		this.numFigurinhas += numFigurinhas;
	}
	
	void dar(int numFigurinhas, Pessoa p) {
		this.numFigurinhas -= numFigurinhas;
		//p.numFigurinhas += numFigurinhas; Para passar as figurinhas para outra pessoa.
		p.receber(numFigurinhas);
	}

}
